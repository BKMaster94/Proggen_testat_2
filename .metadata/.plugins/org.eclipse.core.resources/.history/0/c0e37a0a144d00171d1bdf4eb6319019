<script type="text/javascript">
var player1 = true;
var player2 = false;

function WerlcherDarfClicken(el){
	if(player1 == true ){
		player2 = false;
		document.getElementById(el).innerHTML='x';
	}
	if(player2 == true){
		player1 = false;
		document.getElementById(el).innerHTML='o';
	}
}

</script>
